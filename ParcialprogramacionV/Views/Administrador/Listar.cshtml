@model List<UsuarioModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-header">
        <i class="bi bi-list-task"></i> Lista de Usuarios
    </div>
    <div class="card-body">
        <a asp-action="Guardar" asp-controller="Administrador" class="btn btn-success"><i class="bi bi-plus-circle"></i> Crear Nuevo</a>
        <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Dni</th>
                    <th>Telefono</th>
                    <th>Correo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Apellido</td>
                        <td>@item.Dni</td>
                        <td>@item.Telefono</td>
                        <td>@item.Correo</td>
                        <td>
                            <a asp-action="Editar" asp-controller="Administrador" class="btn btn-primary btn-sm" asp-route-IdUsuario="@item.IdUsuario">Editar</a>
                            <a asp-action="Eliminar" asp-controller="Administrador" class="btn btn-danger btn-sm" asp-route-IdUsuario="@item.IdUsuario"><i class="bi bi-trash3"></i></a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>

    </div>
</div>